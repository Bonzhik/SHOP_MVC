@using SHOP_MVC.Models.Dto
@model ProductDto
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
<form asp-action="DeletePartial" asp-controller="Product" method="post">
    <div class="form-group">
        <input asp-for="@Model.Id" class="form-control" value=@Model.Id disabled/>
        <label asp-for="@Model.Title"></label>
        <input asp-for="@Model.Title" class="form-control" disabled/>
        <span asp-validation-for="@Model.Title" class="text-danger"></span>
        <br />
        <label asp-for="@Model.Description"></label>
        <input asp-for="@Model.Description" class="form-control" disabled/>
        <span asp-validation-for="@Model.Description" class="text-danger"></span>
        <br />
        <label asp-for="@Model.Image"></label>
        <input asp-for="@Model.Image" class="form-control" disabled />
        <span asp-validation-for="@Model.Image" class="text-danger"></span>
        <br />
        <label asp-for="@Model.Quantity"></label>
        <input asp-for="@Model.Quantity" class="form-control" disabled />
        <span asp-validation-for="@Model.Quantity" class="text-danger"></span>
        <br />
        <label asp-for="@Model.Price"></label>
        <input asp-for="@Model.Price" class="form-control" disabled />
        <span asp-validation-for="@Model.Price" class="text-danger"></span>
        <br />
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Удалить</button>
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отменить</button>
</form>